<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    cardView:cardCornerRadius="10dp"
    cardView:cardUseCompatPadding="true"
    android:layout_marginBottom="2dip"
    android:layout_marginTop="2dip"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:scaleType = "centerCrop"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/species_photo"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/species_name"
            android:layout_below="@+id/species_photo"
            android:textSize="36sp"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/species_description"
            android:layout_below="@+id/species_name"
            android:textSize="22sp"
            android:typeface="serif"
            android:textColor="#262626"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/species_remove"
            android:layout_below="@+id/species_description"
            android:textSize="20sp"
            android:textColorHighlight="#ff1a1a"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
